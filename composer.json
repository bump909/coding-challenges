{
    "name": "bump909/coding-challenges",
    "description": "A collection of PHP coding challenges and mini technical tests.",
    "type": "project",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/functions.php",
            "src/fizzbuzz.php",
            "src/anagram_detector.php",
            "src/palindrome_checker.php",
            "src/prime_numbers.php",
            "src/roman_numerals.php",
            "src/simple_sort.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox tests/"
    },
    "minimum-stability": "stable",
    "license": "MIT"
}